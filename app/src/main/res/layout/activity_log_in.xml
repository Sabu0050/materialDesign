<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.sabututexp.everyonejournalist.LogInActivity">

    <TextView
        android:id="@+id/backTextView"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/imageView"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="130sp"
        app:srcCompat="@drawable/formbg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/loginUserEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="  Username"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/logINButton"
        android:layout_alignEnd="@+id/logINButton"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <EditText
        android:id="@+id/loginPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        android:layout_marginBottom="40dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignRight="@+id/loginUserEditText"
        android:layout_alignEnd="@+id/loginUserEditText" />

    <Button
        android:id="@+id/logINButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="@drawable/loginlongbutton"
        android:layout_below="@+id/loginPasswordEditText"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/loginTextView"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOU DON'T HAVE AN ACCOUNT? REGISTER"
        android:layout_below="@+id/logINButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
